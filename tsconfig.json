{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**",
        "!typings/**"
    ],
    "atom": {
        "rewriteTsconfig": true
    },
    "files": [
        "gulpfile.ts",
        "problems/challenging-this-is/solution.ts",
        "problems/challenging-this-is/tests.ts",
        "problems/solution.interface.ts",
        "problems/superstitious-elevators/solution.ts",
        "problems/superstitious-elevators/tests.ts",
        "problems/take-it-as-a-complement/solution.ts",
        "problems/take-it-as-a-complement/tests.ts",
        "problems/test.interface.ts",
        "problems/testsuite.interface.ts"
    ]
}
