{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "atom": {
        "rewriteTsconfig": true
    },
    "files": [
        "gulpfile.ts",
        "problems/complementary-colours/solution.ts",
        "problems/complementary-colours/tests.ts",
        "problems/solution.interface.ts",
        "problems/yoda-speak/solution.ts",
        "problems/yoda-speak/tests.ts"
    ]
}
